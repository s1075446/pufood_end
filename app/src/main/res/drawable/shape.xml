<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 顏色 -->
    <solid android:color="@color/white" />
    <!-- 文字與邊框的間距 -->
    <padding
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"
        android:left="10dp"
        />
    <!-- 設置圓角 -->
    <corners android:radius="30dp" />
    <!-- 邊框線 -->
    <stroke
        android:width="2.5dp"
        android:color="#5BC9D4"
        android:dashGap="0dp"
        android:dashWidth="0dp" />
</shape>